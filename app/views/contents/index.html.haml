  %p
    = text_field_tag :query, params[:query], class: 'span2'
    = submit_tag "Search", name: nil, class: 'btn'
#contents
  - @contents.each do |content|
    .well.success= link_to content.title, '#', content_id: content.id
    -#.well.success 
      -#%span.label.label-success= content.read



