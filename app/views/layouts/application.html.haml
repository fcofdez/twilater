      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "#"} twiLater
          .nav-collapse
            %ul.nav
              %li= link_to "Browse favs", nil
    .container
      .row
        .span10= yield

